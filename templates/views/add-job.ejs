<%- include('partials/header-add-job'); -%>

<div class="container">
  <h1 style="margin-top: 3rem;">Add New Job</h1>

  <form class="" action="/jobpost" method="POST">
    <div class="form-row">
      <!-- <div class="form-group col-md-4 mb-3">
        <label for="exampleFormControlInput1">Job ID</label>
        <input name="jobID" type="text" class="form-control" id="exampleFormControlInput1" />
      </div> -->

      <div class="form-group col-md-4 mb-3">
        <label for="validationDefault04">Category</label>
        <select name="category" class="custom-select" id="validationDefault04" required>
          <option selected disabled value="">Choose...</option>
          <option>Full-time</option>
          <option>Internship</option>
        </select>
      </div>

      <div class="form-group col-md-4 mb-3">
        <label for="validationDefault04">Profile</label>
        <select name="profile" class="custom-select" id="validationDefault04" required>
          <option selected disabled value="">Choose...</option>
          <option>IT Services</option>
          <option>SDE &#8544;</option>
          <option>SDE &#8545;</option>
          <option>SDE &#8546;</option>
          <option>Core Engineering</option>
          <option>Technology Analyst</option>
          <option>Business Analyst</option>
          <option>Teaching Assistant</option>
        </select>
      </div>
    </div>

    <div class="form-group">
      <label for="exampleFormControlInput1">Company Name</label>
      <input name="companyName" type="text" class="form-control" id="exampleFormControlInput1" />
    </div>

    <div class="form-row">
      <div class="form-group col-md-4 mb-3">
        <label for="exampleFormControlInput1">Company Sector</label>
        <input name="companySector" type="text" class="form-control" id="exampleFormControlInput1" />
      </div>

      <div class="form-group col-md-4 mb-3">
        <label for="validationDefault04">CTC (LPA)</label>
        <input name="ctc" type="text" placeholder="15 or To be decided" class="form-control"
          id="exampleFormControlInput1" />
      </div>

      <div class="form-group col-md-4 mb-3">
        <label for="validationDefault04">CGPA Required</label>
        <select name="eligibility.cgpa" class="custom-select" id="validationDefault04" required>
          <option selected disabled value="">Choose...</option>
          <option>None</option>
          <option>6.0</option>
          <option>6.5</option>
          <option>7.0</option>
          <option>7.5</option>
          <option>8.0</option>
          <option>8.5</option>
          <option>9.0</option>
        </select>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2">Branches Eligible</div>
      <div class="col-sm-1">
        <div class="form-check">
          <input name="eligibility.branch" id="branches" value="CSE" class="form-check-input" type="checkbox" />
          <label class="form-check-label" for="gridCheck1">
            CSE
          </label>
        </div>
      </div>
      <div class="col-sm-1">
        <div class="form-check">
          <input name="eligibility.branch" id="branches" value="ECE" class="form-check-input" type="checkbox"
            id="gridCheck2" />
          <label class="form-check-label" for="gridCheck2">
            ECE
          </label>
        </div>
      </div>
      <div class="col-sm-1">
        <div class="form-check">
          <input name="eligibility.branch id="branches" value="EEE" class="form-check-input" type="checkbox"
            id="gridCheck3" />
          <label class="form-check-label" for="gridCheck3">
            EEE
          </label>
        </div>
      </div>
      <div class="col-sm-1">
        <div class="form-check">
          <input name="eligibility.branch" id="branches" value="MEC" class="form-check-input" type="checkbox"
            id="gridCheck4" />
          <label class="form-check-label" for="gridCheck4">
            MEC
          </label>
        </div>
      </div>
      <div class="col-sm-1">
        <div class="form-check">
          <input name="eligibility.branch" id="branches" value="CME" class="form-check-input" type="checkbox"
            id="gridCheck5" />
          <label class="form-check-label" for="gridCheck5">
            CHEM
          </label>
        </div>
      </div>
      <div class="col-sm-1">
        <div class="form-check">
          <input name="eligibility.branch" id="branches" value="CIV" class="form-check-input" type="checkbox"
            id="gridCheck6" />
          <label class="form-check-label" for="gridCheck6">
            CIV
          </label>
        </div>
      </div>
      <div class="col-sm-1">
        <div class="form-check">
          <input name="eligibility.branch" id="branches" value="MME" class="form-check-input" type="checkbox"
            id="gridCheck7" />
          <label class="form-check-label" for="gridCheck7">
            MME
          </label>
        </div>
      </div>
      <div class="col-sm-1">
        <div class="form-check">
          <input name="eligibility.branch" id="branches" value="MIN" class="form-check-input" type="checkbox"
            id="gridCheck8" />
          <label class="form-check-label" for="gridCheck8">
            MIN
          </label>
        </div>
      </div>
      <div class="col-sm-1">
        <div class="form-check">
          <input name="eligibility.branch" id="branches" value="ARCH" class="form-check-input" type="checkbox"
            id="gridCheck9" />
          <label class="form-check-label" for="gridCheck9">
            ARCH
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="Post">Job Description</label>
      <textarea name="jobDescription" class="form-control" id="exampleFormControlTextarea1" rows="7"></textarea>
    </div>

    

    <div class="form-group">
      <h6>Notes</h6>
      <input type="checkbox" id="note1" name="note" value="Students going for higher studies need not apply." />
      <label for="note1">Students going for higher studies need not apply.</label><br />
      <input type="checkbox" id="note2" name="note" value="Dates are tentative. Please check for updates" />
      <label for="note2">Dates are tentative. Please check for updates.</label>
    </div>

    <div class="custom-file">
      <input name="fileName" type="file" class="custom-file-input" id="customFile" />
      <label class="custom-file-label" for="customFile">Attachments - Choose file</label>
    </div>


    
    <input name="dateOfPost" type="hidden"  id="dateOfPost" />

    <button type="submit" class="btn btn-primary mybutton">Add</button>

  </form>
  <div style="min-height: 10em;"></div>
</div>
<script>
    document.getElementById('dateOfPost').value = new Date();
</script>
<%- include('partials/footer'); -%>